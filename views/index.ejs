

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Daily Styling Planner</title>
    <!-- <script defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAXHpgTVil-xqzRs4r-dnIHcqSIDI7uZ9I&callback=initMap"></script> -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<script>
    $(document).ready(function() {
        //아이템 상하 스크롤시 막고 좌우 스크롤로 변경
        $('.items').on('wheel', function(event) {
            let scrollDistance = event.originalEvent.deltaY * 1;
            this.scrollLeft += scrollDistance;
            event.preventDefault();
        })
        //계절별 버튼 클릭시, 배경색 및 강조색 변경
        $('.spring').click(function(){
            $(':root')
            .css('--nav-bg-color', '#FDCEDF')
            .css('--body-bg-color', '#F8E8EE')
            .css('--items-bg-color', '#F9F5F6')
            .css('--accent-color', '#F2BED1');
        })
        $('.summer').click(function(){
            $(':root')
            .css('--nav-bg-color', '#62CDFF')
            .css('--body-bg-color', '#97DEFF')
            .css('--items-bg-color', '#C9EEFF')
            .css('--accent-color', '#0081C9');
        })
        $('.autumn').click(function(){
            $(':root')
            .css('--nav-bg-color', '#ECCDB4')
            .css('--body-bg-color', '#F0EDD4')
            .css('--items-bg-color', '#F9FBE7')
            .css('--accent-color', '#C38154');
        })
        $('.winter').click(function(){
            $(':root')
            .css('--nav-bg-color', '#526D82')
            .css('--body-bg-color', '#9DB2BF')
            .css('--items-bg-color', '#DDE6ED')
            .css('--accent-color', '#27374D');
        })
    })
</script>
<body>
<%- include('header') %>
<!-- Buttons -->
<section class="sort__nav">
    <div class="sort__type">
        <span class="title__type">종류별</span>
        <button class="btn typeBtn top" data-key="kind" data-value="top">
            Top
        </button>
        <button class="btn typeBtn pants" data-key="kind" data-value="pants">
            Pants
        </button>
        <button class="btn typeBtn shoes" data-key="kind" data-value="shoes">
            Shoes
        </button>
    </div>
    <div class="sort__weather">
        <span class="title__weather">계절별</span>
        <button class="btn weatherBtn spring" data-key="weather" data-value="spring">
            Spring
        </button>
        <button class="btn weatherBtn summer" data-key="weather" data-value="summer">
            Summer
        </button>
        <button class="btn weatherBtn autumn" data-key="weather" data-value="autumn">
            Autumn
        </button>
        <button class="btn weatherBtn winter" data-key="weather" data-value="winter">
            Winter
        </button>
    </div>
</section>

<!-- Items -->
<div class="items__container">
    <ul class="items">
        <% for(var item of items){ %>
            <li>
                <img class = "item__thumbnail" src="<%= item.image %>" alt="">
            </li>
        <% } %>    
</ul>
    </ul>   
</div>
</body>
</html>
