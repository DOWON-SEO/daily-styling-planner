    <link rel="stylesheet" href="/css/outfit.css">
</head>
<body>
    <%- include('header') %>
    <section class="recommended">

        <canvas id="myCanvas" width="400" height="400"></canvas>
    </section>
</body>

<script>
    // Canvas 요소와 컨텍스트 가져오기
    var canvas = document.getElementById('myCanvas');
    var context = canvas.getContext('2d');

    // 이미지 로드
    var image1 = new Image();
    image1.src = '<%= outfits.top.image %>';

    var image2 = new Image();
    image2.src = '<%= outfits.bottom.image %>';

    var image3 = new Image();
    image3.src = '<%= outfits.shoes.image %>';
    // 이미지 로드 완료 시 처리
    image1.onload = function() {
        drawImages();
    };

    image2.onload = function() {
        drawImages();
    };

    function drawImages() {
        //캔버스 초기화
        context.clearRect(0, 0, canvas.width, canvas.height);

        
        //하의 그리기
        context.drawImage(image2, canvas.width / 6 * 3, canvas.height / 6 * 2, canvas.width / 6 * 2.3, canvas.height / 6 * 2.3);
        
        //상의 그리기
        context.drawImage(image1, canvas.width / 6, canvas.height / 6, canvas.width / 6 * 3, canvas.height / 6 * 3);
        
        //신발 그리기
        context.drawImage(image3, canvas.width / 6 * 2.8, canvas.height / 6 * 3.8, canvas.width / 6 * 1.8, canvas.height / 6 * 1.8);
    }
</script>