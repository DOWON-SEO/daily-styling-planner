<head>
    <script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=c3e97252f5120b7adcea1dc028e0153c"></script>
    <link rel="stylesheet" href="/css/loader.css">
    <link rel="stylesheet" href="/css/temperature.css">
</head>
<body>
    <%- include('header') %>

    <canvas id="myCanvas" width="400" height="600"></canvas>
</body>

<script>
    // Canvas 요소와 컨텍스트 가져오기
    var canvas = document.getElementById('myCanvas');
    var context = canvas.getContext('2d');

    // 이미지 로드
    var image1 = new Image();
    image1.src = '<%= outfits.top.image %>';

    var image2 = new Image();
    image2.src = '<%= outfits.bottom.image %>';

    var image3 = new Image();
    image3.src = '<%= outfits.shoes.image %>';
    // 이미지 로드 완료 시 처리
    image1.onload = function() {
        drawImages();
    };

    image2.onload = function() {
        drawImages();
    };

    function drawImages() {
        //캔버스 초기화
        context.clearRect(0, 0, canvas.width, canvas.height);

        //상의 그리기
        context.drawImage(image1, 0, 0, canvas.width, canvas.height / 3);

        //하의 그리기
        context.drawImage(image2, 0, canvas.height / 3, canvas.width, canvas.height / 3);
        
        //신발 그리기
        context.drawImage(image3, 0, canvas.height / 3 * 2, canvas.width, canvas.height / 3);
    }
</script>